---
import BaseLayout from "../layouts/BaseLayout.astro";

// SEO por página (se inyecta en BaseLayout)
const pageTitle = "La Doble Bragado 2025 - Carrera de Ciclismo Histórica Argentina";
const pageDescription = "La clásica del oeste bonaerense. 500km de Bragado a Chivilcoy Chacabuco 25 de mayo. La carrera de ciclismo más antigua de Argentina. Inscripciones abiertas 3° femenina. 21 de noviembre 2025.";
const pageKeywords = "la doble bragado 2025, carrera ciclismo argentina, bragado chivilcoy, 200km ciclismo, competencia ciclística, inscripciones ciclismo, oeste bonaerense";
const pageOgImage = "/images/hero-bg.jpg";

// Structured Data (SportsEvent) — OK mantenerlo aquí
const structuredData = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  name: "La Doble Bragado 2025",
  description: "Carrera de ciclismo de 500km desde Bragado hasta Chivilcoy, Argentina",
  startDate: "2025-11-21T06:00:00-03:00",
  endDate: "2025-11-21T18:00:00-03:00",
  eventStatus: "https://schema.org/EventScheduled",
  eventAttendanceMode: "https://schema.org/OfflineEventAttendanceMode",
  location: {
    "@type": "Place",
    name: "Bragado, Buenos Aires",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Bragado",
      addressRegion: "Buenos Aires",
      addressCountry: "AR",
    },
  },
  organizer: {
    "@type": "Organization",
    name: "La Doble Bragado",
    url: "https://ladoblebragado.com.ar",
  },
  sport: "Cycling",
  competitor: [
    { "@type": "Person", name: "Nicolás Traico", description: "Campeón masculino 2025" },
    { "@type": "Person", name: "Maribel Aguirre", description: "Campeona femenina 2024" },
  ],
};
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage={pageOgImage}
  structuredData={structuredData}
>
  <main role="main">
    <!-- HERO -->
    <section id="inicio" class="h-screen flex items-center justify-center relative text-center" aria-labelledby="hero-title">
      <img src="/images/hero-bg.jpg" alt="" fetchpriority="high" decoding="async" class="absolute inset-0 w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>

