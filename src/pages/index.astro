  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Contact form functionality
      const contactForm = document.querySelector('form[name="sponsor-contact"]');
      const formFields = document.querySelectorAll('#sponsors input, #sponsors textarea');
      
      if (contactForm) {
        const submitButton = contactForm.querySelector('button[type="submit"]');
        const originalButtonText = submitButton.innerHTML;
        
        formFields.forEach(field => {
          field.addEventListener('blur', () => {
            validateField(field);
          });
          
          field.addEventListener('input', () => {
            clearValidationState(field);
          });
        });
        
        contactForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          let isValid = true;
          formFields.forEach(field => {
            if (!validateField(field)) {
              isValid = false;
            }
          });
          
          if (!isValid) return;
          
          submitButton.innerHTML = `
            <span class="flex items-center gap-3">
              <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Enviando...
            </span>
          `;
          submitButton.disabled = true;
          
          try {
            await new Promise(resolve => setTimeout(resolve, 1500));
            
            submitButton.innerHTML = `
              <span class="flex items-center gap-3">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                ¡Mensaje enviado!
              </span>
            `;
            
            contactForm.reset();
            
            setTimeout(() => {
              submitButton.innerHTML = originalButtonText;
              submitButton.disabled = false;
            }, 3000);
            
            const formData = new FormData(contactForm);
            fetch('/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: new URLSearchParams(formData).toString()
            });
            
          } catch (error) {
            submitButton.innerHTML = 'Error - Intentar nuevamente';
            submitButton.disabled = false;
            console.error('Form submission error:', error);
          }
        });
      }
      
      function validateField(field) {
        const value = field.value.trim();
        clearValidationState(field);
        
        if (field.hasAttribute('required') && !value) {
          addValidationError(field, 'Este campo es obligatorio');
          return false;
        }
        
        if (field.type === 'email' && value) {
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(value)) {
            addValidationError(field, 'Ingresa un email válido');
            return false;
          }
        }
        
        addValidationSuccess(field);
        return true;
      }
      
      function addValidationError(field, message) {
        const fieldContainer = field.closest('.group\\/field');
        field.classList.add('border-red-400', 'ring-red-400/20');
        
        const existingError = fieldContainer.querySelector('.validation-error');
        if (!existingError) {
          const errorElement = document.createElement('p');
          errorElement.className = 'validation-error text-sm text-red-500 mt-2';
          errorElement.textContent = message;
          fieldContainer.appendChild(errorElement);
        }
      }
      
      function addValidationSuccess(field) {
        field.classList.add('border-green-400', 'ring-green-400/20');
      }
      
      function clearValidationState(field) {
        const fieldContainer = field.closest('.group\\/field');
        field.classList.remove('border-red-400', 'ring-red-400/20', 'border-green-400', 'ring-green-400/20');
        
        const existingError = fieldContainer.querySelector('.validation-error');
        if (existingError) {
          existingError.remove();
        }
      }
    });
  </script>

